<Window x:Class="AuditoryGenerator.WindowAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:AuditoryGenerator"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Администратор" Height="750" Width="1500" Background="#FF0A1129">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Боковая панель -->
        <Border Grid.Column="0" Background="#FF0A1129" VerticalAlignment="Stretch" >
            <Grid>
                <!-- Основное содержимое боковой панели -->
                <StackPanel>
                    
                    <!-- Заголовок и версия -->
                    <DockPanel Margin="10,20,0,5" LastChildFill="False">
                        <TextBlock Text="AuditorHelper" FontSize="18" FontWeight="Bold" Foreground="White" DockPanel.Dock="Left"/>
                        <materialDesign:PackIcon Kind="Download"
                             Width="20" Height="20"
                             Foreground="White"
                             Cursor="Hand"
                             Margin="10,0,0,0"
                             VerticalAlignment="Center"
                             MouseLeftButtonUp="DownloadTemplate_Click"/>
                    </DockPanel>

                    <Separator Background="White" Height="1" Margin="0,10,0,10"/>
                    
                    <!-- Выпадающее меню для раздела "Корпуса" -->
                    <Expander Header="Корпуса" FontSize="16" Foreground="White" Background="#FF0A1129" Margin="10,5">
                        <StackPanel>
                            <TextBlock Text="Нахимовский" FontSize="14" Foreground="White" Margin="23,5" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp_4" />
                            <TextBlock Text="Нежинская" FontSize="14" Foreground="White" Margin="23,5" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp_5" />
                        </StackPanel>
                    </Expander>

                    <!-- Выпадающее меню для раздела "События" -->
                    <Expander Header="События" FontSize="16" Foreground="White" Background="#FF0A1129" Margin="10,5">
                        <StackPanel>
                            <TextBlock Text="Мероприятия" FontSize="14" Foreground="White" Margin="25,5" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp_2" />
                            <TextBlock Text="Учебные практики" FontSize="14" Foreground="White" Margin="25,5" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp_3" />
                        </StackPanel>
                    </Expander>

                    <Expander Header="Привязка&#xD;&#xA;аудиторий" FontSize="16" Foreground="White" Background="#FF0A1129" Margin="10,5">
                        <StackPanel>
                            <TextBlock Text="Нахимовский" FontSize="14" Foreground="White" Margin="25,5" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp"/>
                            <TextBlock Text="Нежинская" FontSize="14" Foreground="White" Margin="25,5" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp_1"/>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Управление &#xD;&#xA;преподавателями&#xD;&#xA;и аудиториями" FontSize="16" Foreground="White" Background="#FF0A1129" Margin="10,5">
                        <StackPanel>
                            <TextBlock x:Name="TeacherTextBlock"  FontSize="14" Foreground="White" Margin="25,5" MouseLeftButtonUp="TeacherTextBlock_MouseLeftButtonUp"><Run Language="ru-ru" Text="Преподаватели"/></TextBlock>
                            <TextBlock x:Name="RoomTextBlock" Text="Аудитории" FontSize="14" Foreground="White" Margin="25,5" MouseLeftButtonUp="RoomTextBlock_MouseLeftButtonUp"/>
                        </StackPanel>
                    </Expander>
                    <Separator Background="White" Height="1" Margin="0,0,0,10"/>
                    <Button Content="Загрузить расписание"
                        Margin="10,10,10,5"
                        Background="#FF0A1129"
                        Foreground="White"
                        FontSize="14"
                        Click="LoadSchedule_Click"/>
                    <Expander Header="Загруженные файлы"
                      FontSize="16"
                      Foreground="White"
                      Background="#FF0A1129"
                      Margin="5,4">
                        <ScrollViewer Height="150">
                            <ItemsControl x:Name="LoadedFilesList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,2">
                                            <TextBlock Text="{Binding}" 
                                               Foreground="White" 
                                               FontSize="13" 
                                               VerticalAlignment="Center" 
                                               Margin="23,0,0,0" 
                                               ToolTip="{Binding}" />           
                                            <materialDesign:PackIcon Kind="Close" 
                                                 Width="20" Height="20" 
                                                 Foreground="Red"
                                                 Cursor="Hand"
                                                 Margin="10,0,0,0"
                                                 MouseLeftButtonUp="RemoveFile_Click"
                                                 Tag="{Binding}"/>      
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Expander>

                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10,0,10,33" Height="31" VerticalAlignment="Bottom">
                    <Separator Background="White" Height="1" Margin="0,0,0,10"/>
                    <DockPanel>
                        <!-- Текст с левой стороны -->
                        <TextBlock x:Name="NamePatient" VerticalAlignment="Center" Text="Выход" FontSize="15" Foreground="White" Margin="0,0,5,0" DockPanel.Dock="Left"/>
                        <!-- Иконка выхода с правой стороны -->
                        <materialDesign:PackIcon Kind="ExitToApp" Cursor="Hand" VerticalAlignment="Center"  Foreground="White" Width="23" Height="23"  MouseLeftButtonUp="Exit_Click"  HorizontalAlignment="Right"/>
                    </DockPanel>
                </StackPanel>
            </Grid>
        </Border>
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="#FFA9D7FF"/>
    </Grid>
</Window>
