<Window x:Class="AuditoryGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        Title="Авторизация" Height="220" Width="400"  FontFamily="Bahnschrift" Background="#FF0A1129" >
    <Grid Background="#FFA9D7FF">
        <StackPanel Background="#0A1129" VerticalAlignment="Top" Height="79">
            <TextBlock Text="AuditorHelper" FontSize="32" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Height="37"/>
            <TextBlock Text="Приложение для работы с аудиторным фондом" 
                   FontSize="14" Foreground="White" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel  VerticalAlignment="Top" Width="260" Margin="60,94,60,0" Height="100">
            <PasswordBox x:Name="PasswordBox" materialDesign:HintAssist.Hint="Пароль" BorderBrush="#0A1129" Background="Transparent" 
                FontSize="14" Foreground="#0A1129" MaxLength="15" Margin="5"/>

            <Button Content="Войти" Background="#0A1129" Foreground="White" FontSize="14" 
                    Padding="10,5" Width="90"
                    Cursor="Hand" BorderBrush="#FF131C4D"
                    Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
