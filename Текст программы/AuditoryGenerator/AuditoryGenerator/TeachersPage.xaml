<Page x:Class="AuditoryGenerator.TeachersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="Управление преподавателями" FontFamily="Bahnschrift">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Список преподавателей -->
        <GroupBox Header="Преподаватели" Margin="5" 
                  Foreground="White" Style="{StaticResource MaterialDesignGroupBox}"
                  materialDesign:ColorZoneAssist.Mode="Custom"
                  materialDesign:ColorZoneAssist.Background="#FF0A1129">
            <DataGrid x:Name="TeachersDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="#FF0A1129"
                      Foreground="White"
                      Height="Auto" Margin="5"
                      SelectionChanged="TeachersDataGrid_SelectionChanged">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Foreground="White" Binding="{Binding Id}" Width="50">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="ID" Foreground="White"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Foreground="White" Binding="{Binding FullName}" Width="300">
                        <DataGridTextColumn.Header>
                            <TextBlock Text="ФИО" Foreground="White"/>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Управление преподавателями -->
        <GroupBox Header="Добавление / Редактирование" Grid.Column="1" Margin="5"
                  Foreground="White" Style="{StaticResource MaterialDesignGroupBox}"
                  materialDesign:ColorZoneAssist.Mode="Custom"
                  materialDesign:ColorZoneAssist.Background="#FF0A1129">
            <StackPanel>
                <TextBlock Text="ФИО преподавателя:"  Margin="5" Foreground="#FF0A1129"/>
                <TextBox x:Name="FullNameTextBox" materialDesign:HintAssist.Hint="И.О. Фамилия" Foreground="#FF0A1129" Margin="5" BorderBrush="#FF0A1129"/>

                <Button Content="Добавить преподавателя" Background="#FF0A1129" Click="AddTeacherButton_Click" Margin="5"/>
                <Button Content="Редактировать преподавателя" Background="#FF0A1129" Click="EditTeacherButton_Click" Margin="5"/>
                <Button Content="Удалить преподавателя" Background="#FF0A1129" Click="DeleteTeacherButton_Click" Margin="5"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
