<Page x:Class="AuditoryGenerator.AuditoryNahim"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:AuditoryGenerator"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="AuditoryNahim">

    <Grid Margin="10" Cursor="">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ ПАНЕЛЬ -->
        <DataGrid x:Name="DataGridAuditory"
                  Grid.Column="0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="#FF0A1129"
                  Foreground="White"
                  Margin="5"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Width="50">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="ID" Foreground="White"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding RoomNumber}" Width="*">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Номер аудитории" Foreground="White"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding TeacherName}" Width="*">
                    <DataGridTextColumn.Header>
                        <TextBlock Text="ФИО Преподавателя" Foreground="White"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ПРАВАЯ ПАНЕЛЬ -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10" VerticalAlignment="Top">
                <TextBlock Text="Тип недели:" Foreground="#FF0A1129" FontSize="14" Margin="5,0,0,2"/>
                <ComboBox Style="{StaticResource MaterialDesignFilledComboBox}"
                          SelectionChanged="WeekTypeComboBox_SelectionChanged"
                          materialDesign:TextFieldAssist.HasClearButton="True"
                          x:Name="WeekTypeComboBox"
                          Margin="0,0,0,10"
                          FontSize="14"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          Foreground="Black"
                          IsEditable="True"
                          SelectedIndex="0"/>

                <TextBlock Text="Аудиторный Excel-файл:" Foreground="#FF0A1129" FontSize="14" Margin="5,0,0,5"/>
                <Button Content="Загрузить файл (.xlsx)"
                        Click="LoadAuditoryFile_Click"
                        Margin="0,0,0,10"
                        Height="35"
                        HorizontalAlignment="Left"
                        MinWidth="180"
                        Background="#FF0A1129"/>

                <TextBlock x:Name="LoadedAuditoryFileName"
                           Text="Файл не выбран"
                           Foreground="#FF0A1129"
                           FontSize="13"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>

                <Button Content="СГЕНЕРИРОВАТЬ"
                        Margin="0"
                        Padding="10,5"
                        Click="ApplyMarking_Click"
                        FontSize="14"
                        HorizontalAlignment="Left"
                        Background="#FF0A1129" BorderBrush="Red"/>
                <!-- 🔧 Настройка предпочтений этажей -->
                <TextBlock Text="Выберите преподавателей и этаж:" FontWeight="Bold" Margin="0,20,0,5"/>

                <ListBox x:Name="TeachersListBox"
                     SelectionMode="Extended"
                     Height="200"
                     Margin="0,0,0,10"
                     Foreground="Black">    
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                <TextBlock Text="{Binding Name}" Margin="5,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Этаж:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="FloorPreferenceComboBox"
                              SelectionChanged="FloorPreferenceComboBox_SelectionChanged"
                      Width="120"
                      SelectedIndex="0">
                        <ComboBoxItem Content="1 этаж" Tag="1"/>
                        <ComboBoxItem Content="2 этаж" Tag="2"/>
                        <ComboBoxItem Content="3 этаж" Tag="3"/>
                    </ComboBox>
                </StackPanel>

                <Button Content="Применить этаж к выбранным"
                    Background="#FF0A1129"
                    Foreground="White"
                    Padding="10,5"
                    HorizontalAlignment="Left" Click="ApplyFloorPreference_Click"/>    

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
